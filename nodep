bash -c 'apt update -y && apt install -y curl wget && mkdir -p /opt/nodepay && cd /opt/nodepay && curl -L https://nodepay.org/install.sh -o install.sh && chmod +x install.sh && echo "Starting Nodepay..." && bash install.sh --token "eyJhbGciOiJIUzUxMiJ9.eyJzdWIiOiIxNDQ1MTMzOTQyNjQzMzcyMDMyIiwiaWF0IjoxNzY0NjE3MjAwLCJleHAiOjE3NjU4MjY4MDB9.OnnrbR17opqQL03TZQiqnoARgUyssuyfqunACl9w46rrElVNlkBqAqgwalTGe7HLTY4P4rO_HPErm4lBz5t-Pg" && cat <<EOF >/etc/systemd/system/nodepay.service
[Unit]
Description=Nodepay Client
After=network.target

[Service]
Type=simple
ExecStart=/opt/nodepay/nodepay --token eyJhbGciOiJIUzUxMiJ9.eyJzdWIiOiIxNDQ1MTMzOTQyNjQzMzcyMDMyIiwiaWF0IjoxNzY0NjE3MjAwLCJleHAiOjE3NjU4MjY4MDB9.OnnrbR17opqQL03TZQiqnoARgUyssuyfqunACl9w46rrElVNlkBqAqgwalTGe7HLTY4P4rO_HPErm4lBz5t-Pg
Restart=always
RestartSec=10
WorkingDirectory=/opt/nodepay

[Install]
WantedBy=multi-user.target
EOF
systemctl daemon-reload && systemctl enable nodepay && systemctl start nodepay'
